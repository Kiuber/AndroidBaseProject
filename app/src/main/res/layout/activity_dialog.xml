<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/normal_space">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showNormalDialog1"
        android:text="显示一般提示对话框（点击对话框外可以取消）"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showNormalDialog2"
        android:text="显示一般提示对话框（点击对话框外不可以取消）"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showHandleDialog1"
        android:text="显示可以回调的对话框1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showHandleDialog2"
        android:text="显示可以回调的对话框2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showHandleDialog3"
        android:text="显示可以回调的对话框3"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showNormalProgressDialog1"
        android:text="显示一般提示对话框（点击对话框外可以取消，没有自定义标题）"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showNormalProgressDialog2"
        android:text="显示一般提示对话框（点击对话框外可以取消，自定义标题）"/>

</LinearLayout>